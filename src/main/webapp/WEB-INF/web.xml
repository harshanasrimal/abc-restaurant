<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>HomeController</servlet-name>
  	<display-name>HomeController</display-name>
  	<description></description>
  	<servlet-class>controllers.HomeController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AuthController</servlet-name>
  	<display-name>AuthController</display-name>
  	<description></description>
  	<servlet-class>controllers.AuthController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CategoryController</servlet-name>
  	<display-name>CategoryController</display-name>
  	<description></description>
  	<servlet-class>controllers.CategoryController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>BranchController</servlet-name>
  	<display-name>BranchController</display-name>
  	<description></description>
  	<servlet-class>controllers.BranchController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductController</servlet-name>
  	<display-name>ProductController</display-name>
  	<description></description>
  	<servlet-class>controllers.ProductController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>MenuController</servlet-name>
  	<display-name>MenuController</display-name>
  	<description></description>
  	<servlet-class>controllers.MenuController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>HomeController</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>default</servlet-name>
    <url-pattern>/assets/*</url-pattern> <!-- This assumes your static files are in /assets folder -->
</servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AuthController</servlet-name>
  	<url-pattern>/auth/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CategoryController</servlet-name>
  	<url-pattern>/admin/categories/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>BranchController</servlet-name>
  	<url-pattern>/admin/branches/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductController</servlet-name>
  	<url-pattern>/admin/products/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>MenuController</servlet-name>
  	<url-pattern>/menu/</url-pattern>
  </servlet-mapping>
</web-app>
